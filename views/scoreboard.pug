div(class="flex-container hidden")#scoreboard
    div(class="back-btn") X
    div(class="container")
        h1(class='center-text') Scoreboard
        // Table containing scoreboard
        table(class="w3-table w3-hoverable w3-striped w3-bordered w3-centered")#scores
            thead#scoreThead
                tr#scoreHeader
                    th(style="cursor: pointer;" onclick="w3.sortHTML('#scores','.item', 'td:nth-child(1)')") name
                    th( style="cursor: pointer;" onclick="w3.sortHTML('#scores','.item', 'td:nth-child(2)')") wins
                    th( style="cursor: pointer;" onclick="w3.sortHTML('#scores','.item', 'td:nth-child(3)')") losses
            tbody#scoreTbody
                -  results=Object.entries(results).sort(function (a, b) {return (a[1].wins < b[1].wins) ? 1 : ((a[1].wins > b[1].wins) ? -1 : 0);})
                each result in results
                    tr(role="button" class="w3-hover-pale-green w3-hover-text-green")#scoreRow
                        td(class="w3-left-align")=result[0]
                        td(class="w3-right-align")=result[1].wins
                        td(class="w3-right-align")=result[1].losses



