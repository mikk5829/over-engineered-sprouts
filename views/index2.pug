extends layout

block scripts
    script(src='/socket.io/socket.io.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js')
    script(type="text/javascript" src="scripts/main-menu.js")
    script(type='text/javascript' src='scripts/webelements.js')
    link(rel='stylesheet' href='https://www.w3schools.com/w3css/4/w3.css')


block content
    style.
        body {
            background: #61daac;
            color: #4bac88;
            text-align: center;
        }


        .button:hover {
            background-color: #e5fff0;
            border-color: #4bac88;
            color: #4bac88;
        }

        canvas {
            border: solid .2em #4bac88;
            height: 90vh;
        }

        .container {
            width: 100%;
            position: relative;
        }

        .flex-container {
            display: inline-flex;
        }

        .main-block {
            width:50em;
            height: 35em;
            position: relative;
            top:-5.5em;

            background-color: #f7f7e7ff;
            border-radius: 7px;

            justify-content: center;
            align-items: center;
            z-index: 1;
        }

        .w3-table {
            width: 24em;
            cursor: pointer;
            background-color: #fefff9;
            border: 2px solid #4bac88;
        }

        thead tr {
            color: rgba(75, 172, 136, 0.49);
        }

        /* width */
        tbody::-webkit-scrollbar {
            width: 0.7em;
        }

        /* Handle */
        tbody::-webkit-scrollbar-thumb {
            background: #4bac88;
            border-radius: 10px;
        }

        /* Handle on hover */
        tbody::-webkit-scrollbar-thumb:hover {
            background: #61daac;
        }

        tbody {
            display: block; /* to enable vertical scrolling */
            max-height: 200px; /* e.g. */
            overflow-y: scroll; /* keeps the scrollbar even if it doesn't need it; display purpose */
        }

        /*th, td {*/
        /*    width: 33.33%; !* to enable "word-break: break-all" *!*/
        /*    padding: 5px;*/
        /*    word-break: break-all; !* 4. *!*/
        /*}*/

        tr {
            display: table; /* display purpose; th's border */
            width: 100%;
            box-sizing: border-box; /* because of the border (Chrome needs this line, but not FF) */
        }

        td {
            text-align: center;
            border-bottom: none;
            border-left: none;
        }

    div(class="container")
        a(href="localhost:3000" style="position: relative; z-index: 1;")
            img(style="width:35em;" src='../assets/sprouts.svg')

        div(class="main-block flex-container")
            div(style="position:relative;bottom:1em;")
                a(class='button' id='importBtn') Import
                input(type='file' name='world-input' id='world-file-input' style="display:none" accept="text/plain,.txt" onchange="handleFile(this.files)")
                a(class='button') Generate
                a(class='button') Settings
                a(class='button') Scoreboard

            div
                div(class="w3-responsive")
                    table(class="w3-table w3-hoverable" id="games")
                        thead
                            tr
                                th(class="w3-left-align") name
                                th(class="w3-right-align") players
                        tbody
                            tr(class="w3-hover-pale-green w3-hover-text-green")
                                th(class="w3-left-align") Lau
                                th(class="w3-right-align") 1/2
                            tr(class="w3-hover-pale-green w3-hover-text-green")
                                th(class="w3-left-align") Seb
                                th(class="w3-right-align") 2/2
                            tr(class="w3-hover-pale-green w3-hover-text-green")
                                th(class="w3-left-align") Bob
                                th(class="w3-right-align") 10/2

                a(class='button') Quickplay

